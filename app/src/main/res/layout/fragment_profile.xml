<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custon_input_send_without_corner"
    android:id="@+id/bar">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custon_input_send_without_corner"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custon_input_send_without_corner">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:id="@+id/username"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/colorBlack"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/options"
                android:src="@drawable/ic_options"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




</com.google.android.material.appbar.AppBarLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/top_bar"
            android:padding="1dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/image_profile"/>
                <LinearLayout
                    android:background="@drawable/custom_profile_bg"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="4dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@color/transparnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posts"
        android:fontFamily="@font/lobsterregular"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobsterregular"
       android:text="posts"/>


</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followers"
        android:fontFamily="@font/lobsterregular"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobsterregular"
       android:text="followers"/>
</LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/following"
                                android:fontFamily="@font/lobsterregular"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lobsterregular"
                                android:text="following"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:id="@+id/edit_profile"
                            android:textColor="@color/white"
                            android:background="@drawable/custom_button_follow"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/msgs"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_send_black"
                        android:visibility="invisible"/>

                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:id="@+id/mid_bar"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:id="@+id/fullname"
        android:textStyle="bold"
        android:fontFamily="@font/lobsterregular"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/bio"
        android:maxLines="6"
        android:fontFamily="@font/lobsterregular"
        android:textColor="@color/colorPrimaryDark"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="-5dp"
    android:id="@+id/last_bar"
    android:background="@drawable/button_background"
    android:orientation="horizontal">
    <ImageButton
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/my_Posts"
        android:src="@drawable/ic_grid_black"
        android:background="@drawable/custon_input_send_without_corner"
        style="?android:attr/buttonBarButtonStyle"/>
    <ImageButton
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custon_input_send_without_corner"
        android:layout_weight="2"
        android:id="@+id/save_videos"
        android:src="@drawable/ic_favorite_black"
        style="?android:attr/buttonBarButtonStyle"/>



</LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="392dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/recycle_view_save"/>
    </LinearLayout>
</ScrollView>







</RelativeLayout>